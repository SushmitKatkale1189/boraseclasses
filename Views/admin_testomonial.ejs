
<%- include('_admin_navbar') %>

<section class="w-full h-full bg-l1 overflow-x-hidden overflow-y-scroll text-lg md:text-xl relative" id="adminGallery">
    <div class="relative shadow-md sm:rounded-lg w-[1400px] max-w-full flex flex-col items-center justify-center mx-auto flex-wrapmb-12 mb-8 px-2 mt-28">
        <p class="section-subtitle mb-10">Testomonial</p>
        <table class="w-full text-2xl text-left text-gray-500 dark:text-gray-400">
            <thead class="text-2xl text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Name
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Photo
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Tag
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Value
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Stars
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>

                    <% for( let i = 0; i < testomonial.length; i++ ) { %>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                            <td class="w-[10%] p-4">
                                <%= testomonial[i].te_name  %>
                            </td>
                            <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white w-[20%]">
                                <img src="<%= testomonial[i].te_photo  %>" class="w-[30%] aspect-square object-cover rounded-full">
                            </td>
                            <td class="w-[12%] p-4">
                                <%= testomonial[i].te_tag  %>
                            </td>
                            <td class="p-4 max-w-[80%]">
                                <%= testomonial[i].te_value %>
                            </td>
                            <td class="w-[8%] p-4">
                                <%= testomonial[i].te_review  %>
                            </td>
                            <td class="px-6 py-4">
                                <a href="/admin/delete-testomonial?id=<%= testomonial[i].id  %>" class="font-medium text-red-600 dark:text-red-500 hover:underline">Remove</a>
                            </td>
                        </tr>
                    <% } %>

                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="w-[10%] p-4">

                        </td>
                        <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white max-w-[20%] w-[15%]">

                        </td>
                        <td class="w-[12%] p-4">

                        </td>
                        <td class="p-4 max-w-[80%]">

                        </td>
                        <td class="w-[8%] p-4">

                        </td>
                        <td class="px-6 py-4">
                            <%- include('_testomonial_add_form')  %>
                        </td>
                    </tr>

            </tbody>
        </table>
    </div>
</section>
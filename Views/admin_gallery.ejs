
<%- include('_admin_navbar') %>

<section class="w-full h-full bg-l1 overflow-x-hidden overflow-y-scroll text-lg md:text-xl relative" id="adminGallery">
    <div class="relative shadow-md sm:rounded-lg w-[1400px] max-w-full flex flex-col items-center justify-center mx-auto flex-wrapmb-12 mb-8 px-2 mt-28">
        <p class="section-subtitle mb-10">Images</p>
        <table class="w-full text-2xl text-left text-gray-500 dark:text-gray-400">
            <thead class="text-2xl text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        SR.NO
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Image
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <% for( let i = 0; i < gallery.length; i++ ) { %>
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="w-32 p-4">
                            <%= i+1 %>
                        </td>
                        <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white w-full">
                            <img src="<%= gallery[i].g_image  %>" alt="Apple Watch" class="w-[20%] aspect-[1.35] object-cover">
                        </td>
                        <td class="px-6 py-4">
                            <a href="/admin/delete-gallery?id=<%= gallery[i].id  %>" class="font-medium text-red-600 dark:text-red-500 hover:underline">Remove</a>
                        </td>
                    </tr>
                <% } %>

                <form action="/admin/add-gallery" method="post" enctype="multipart/form-data">
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="w-32 p-4">
                            
                        </td>
                        <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                            <input type="file" accept="image/*" name="g_image" required>
                        </td>
                        <td class="px-6 py-4">
                            <input type="submit" value="Add" class="font-medium text-red-600 dark:text-red-500 hover:underline cursor-pointer">
                        </td>
                    </tr>
                </form>
            </tbody>
        </table>
    </div>

    <div class="relative shadow-md sm:rounded-lg w-[1400px] max-w-full flex flex-col items-center justify-center mx-auto flex-wrapmb-12 mb-8 px-2">
        <p class="section-subtitle mb-10">Youtube Videos</p>
        <table class="w-full text-2xl text-left text-gray-500 dark:text-gray-400">
            <thead class="text-2xl text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        SR.NO
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Youtube Video Link
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>

                <% for( let i = 0; i < youtube.length; i++ ) { %>
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="w-32 p-4">
                            1
                        </td>
                        <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white w-full">
                            <a href="https://www.youtube.com/watch?v=<%= youtube[i].y_link %>" target="_blank">https://www.youtube.com/watch?v=<%= youtube[i].y_link %></a>
                        </td>
                        <td class="px-6 py-4">
                            <a href="/admin/delete-youtube?id=<%= youtube[i].id  %>" class="font-medium text-red-600 dark:text-red-500 hover:underline">Remove</a>
                        </td>
                    </tr>
                <% } %>

                <form action="/admin/add-youtube" method="POST">
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="w-32 p-4">
                            
                        </td>
                        <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                            <input type="url" class="w-full h-full rounded-md text-2xl" placeholder="Youtube link" name="y_link" required>
                        </td>
                        <td class="px-6 py-4">
                            <input type="submit" value="Add" class="font-medium text-red-600 dark:text-red-500 hover:underline cursor-pointer">
                        </td>
                    </tr>
                </form>
            </tbody>
        </table>
    </div>

</section>
<!-- Modal toggle -->
<button data-modal-target="authentication-modal-<%=  `c`+categorie.id %>" data-modal-toggle="authentication-modal-<%=  `c`+categorie.id %>" class="hover:underline text-blue-600 font-semibold w-full" type="button">
    <h2 class="w-full text-center"><%= categorie.c_name  %></h2>
</button>
  
  <!-- Main modal -->
<div id="authentication-modal-<%=  `c`+categorie.id %>" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full text-start">
    
      <div class="relative w-[500px] h-fit max-w-full max-h-full">
          <!-- Modal content -->
          <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
              <button type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-2xl p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white" data-modal-hide="authentication-modal-<%=  `c`+ categorie.id %>">
                  <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                  <span class="sr-only">Close modal</span>
              </button>
              <div class="px-6 py-6 lg:px-8">
                  <h3 class="h3 mb-10">Update Categorie</h3>
                  <form class="space-y-6" action="/admin/update-categorie" method="POST">

                      <input type="hidden" value="<%= categorie.id %>" name="id">
                      <div>
                          <label for="CName" class="block mb-2 text-2xl font-medium text-gray-900 dark:text-white">Categorie Name</label>
                          <input type="text" name="c_name" id="CName" class="bg-gray-50 border border-gray-300 text-gray-900 text-2xl rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:value-gray-400 dark:text-white" value="<%= categorie.c_name  %>" required>
                      </div>
                      <div>
                          <label for="c_tag" class="block mb-2 text-2xl font-medium text-gray-900 dark:text-white">Categorie Tag</label>
                          <input type="text" name="c_tag" id="c_tag" value="<%= categorie.c_tag  %>" class="bg-gray-50 border border-gray-300 text-gray-900 text-2xl rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:value-gray-400 dark:text-white" required>
                      </div>
                      <div>
                        <label for="c_info" class="block mb-2 text-2xl font-medium text-gray-900 dark:text-white">Categorie Info</label>
                        <textarea name="c_info" id="" rows="4" class="w-full text-2xl border-none outline-none"><%= categorie.c_value  %></textarea>
                    </div>

                    <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-2xl px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Update Categorie</button>

                  </form>
              </div>
          </div>
      </div>
  </div> 